
<div class="containers">
  <div class="row d-flex justify-content-between">
    <div class="col-3"><h1><%= @task.title %></h1></div>
    <div class="col-3 text-align-end">
      <%= button_to 'Edit a task', edit_task_path, method: :get %>
    </div>
  </div>

  <div class="border rounded p-2 m-2">
    <%= @task.details %>
  </div>

  <div class="border-bottom p-2 m-2">
    <% if @task.completed == true%>
        <p> <input type="checkbox" checked="checked"> The task is completed<p>
      <% else %>
        <p> <input type="checkbox"> The task is not completed<p>
      <% end %>
  </div>

  <div>
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>

  <div>
      <%= link_to 'Back to list', tasks_path %>
  </div>
</div>
