<h1>List of tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true%>
      <p>
        <input type="checkbox" checked="checked">
        <%= link_to task.title, task_path(task) %>
      </p>
    <% else %>
      <p><input type="checkbox">
        <%= link_to task.title, task_path(task) %>
      </p>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Add a new task', 'tasks/new'%>
